# -- Ejecución de algunas cosas importantes --
exec waybar
exec swaybg -i ~/.config/assets/background1.jpg -m fill

# -- Configuración del teclado, sistema y tableta --
input "type:keyboard" {
    xkb_layout latam
    xkb_options caps:swapescape
}

# Mapear la tableta a la pantalla principal
input "type:tablet_tool" {
    map_to_output eDP-1
}

# Configuración del Touchpad
input "type:touchpad" {
    tap enabled
    natural_scroll disabled
    dwt enabled
    pointer_accel 0.5
}

# Fuente para los títulos de ventanas y la barra
font pango:JetBrainsMono Nerd Font 11

# -- Configuración de las ventanas --
default_border pixel 1
default_floating_border normal
hide_edge_borders smart
smart_gaps on
gaps inner 10
gaps outer 5

# -- Configuración de los shortcuts --
set $mod Mod4 
set $term kitty

# Apertura y cierre
bindsym $mod+t exec $term
bindsym $mod+Shift+q kill
bindsym $mod+d exec wofi --show run

# Volumen
bindsym XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

# Brillo
bindsym XF86MonBrightnessUp exec brightnessctl set 5%+
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

# Movimiento con vimotions 
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right   

# Cambiar tamaño con vimotions
mode "resize" {
    bindsym h resize shrink width 10 px
    bindsym j resize grow height 10 px
    bindsym k resize shrink height 10 px
    bindsym l resize grow width 10 px

    # Volver al modo normal
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Entrar al modo resize con Super + Shift + r
bindsym $mod+r mode "resize"

# Cambiar de espacio de trabajo
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Mover la ventana enfocada a un espacio de trabajo
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Super + s para seleccionar un área y copiar al portapapeles
bindsym $mod+s exec grim -g "$(slurp)" - | wl-copy

# Recargar configuración con Super + Shift + c
bindsym $mod+Shift+c reload

# Salir de Sway (Cerrar sesión)
bindsym $mod+Shift+e exec swaymsg exit

# Bloquear pantalla (color negro)
bindsym $mod+Shift+l exec swaylock --no-unlock-indicator -i ~/.config/assets/background1.jpg 

# Reiniciar
bindsym $mod+Shift+r exec systemctl reboot

# Apagar
bindsym $mod+Shift+p exec systemctl poweroff

# Lanzar el ecosistema de notas
bindsym $mod+m exec python3 ~/scripts-notes/scripts/wofi_link.py
